//TIP To <b>Run</b> code, press <shortcut actionId="Run"/> or
// click the <icon src="AllIcons.Actions.Execute"/> icon in the gutter.
void main() {
    String a = "Test";
    System.out.println("длина: " + a.length());
    System.out.println("первая буква: " + a.charAt(0));
    if (a.indexOf("Java")!=-1){
        System.out.println("Такое слово есть");
    } else {
        System.out.println("такого слова нет");
    }
    System.out.println(a.toUpperCase());
    System.out.println(a.substring(1,3));
    System.out.println(a.indexOf("s"));
    String name = "banana";
    int price = 20;
    int count = 5;
    System.out.println(String.format( "Вы купили %s, количество: %d, итоговая стоимость: %d.", name,count, count*price));
}
